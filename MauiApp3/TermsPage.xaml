        <!--#region Footer-->



        <Grid  ZIndex="4" Grid.RowSpan="2" VerticalOptions="End" BackgroundColor="Blue" Grid.Row="2" RowDefinitions="auto, auto,auto " ColumnDefinitions="*, *, *, *">


            <Entry  x:Name="addTermName" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Placeholder="New Term"
                  BackgroundColor="Blue"  IsVisible="false" HorizontalTextAlignment="Center"  />

            <Label BackgroundColor="Yellow" x:Name="startLabel" Text="Start Date" Grid.Row="1" Grid.Column="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" IsVisible="false"/>
            <DatePicker  x:Name="addTermStart" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="Start" IsVisible="false" />
            <Label  x:Name="endLabel" Text="End Date" Grid.Row="1" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="End" IsVisible="false" />

