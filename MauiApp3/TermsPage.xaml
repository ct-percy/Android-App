                                    ItemsSource="{Binding terms}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    BackgroundColor="#042c54">
                        <CollectionView.Shadow>
                            <Shadow Brush="black"
                                    Radius="20"></Shadow>
                        </CollectionView.Shadow>

                        <CollectionView.EmptyView>
                            <Label TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Text="Click 'Add A New Term' to get started!" />
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>

                                <Grid Margin="5"
                                      RowDefinitions="*,*, *,*"
                                      ColumnDefinitions="*, *">

                                    <Label Grid.Row="0"
                                           Grid.ColumnSpan="5"
                                           Grid.RowSpan="2"
                                           x:Name="termName"
                                           FontSize="Large"
                                           FontAttributes="Bold"
                                           TextColor="LightGrey"
                                           Text="{Binding termName}"></Label>
                                    <Label Grid.Row="2"
                                           Grid.RowSpan="2"
                                           Text="{Binding startDate}"
                                           TextColor="LightGrey"></Label>
                                    <Label Text="-"
                                           Grid.Row="2"
                                           HorizontalOptions="Center"
                                           TextColor="LightGrey"></Label>
                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           HorizontalOptions="End"
                                           Text="{Binding endDate}"
                                           TextColor="LightGrey"></Label>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </Grid>

                <Grid BackgroundColor="#042c54"
                      RowDefinitions="*,*,*,*"
                      ColumnDefinitions="*,*,*,*">

