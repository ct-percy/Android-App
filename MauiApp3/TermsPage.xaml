<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.TermsPage"
             >
    <!--this grid creates header, body, and footer -->

    <Grid RowDefinitions="200,* ,auto"
            ColumnDefinitions="*">

        <!--#region Header-->

        <Image Aspect="Fill" Source="dotnet_bot.png" BackgroundColor="White"/>

        <!--#endregion-->


        <!--#region Body-->

        <ScrollView ZIndex="3" Grid.Row="1" VerticalScrollBarVisibility="Always">


            <StackLayout>

                <!--#region Term1-->
                <Grid RowDefinitions="*,*,*"
                      ColumnDefinitions="*,*">

                    <ImageButton x:Name="collapse1" ZIndex="2" Clicked="collapse_Clicked" Source="collapse.png" VerticalOptions="Start" Grid.Row="1"
                               Grid.RowSpan="2"  Grid.Column="1" HeightRequest="30" HorizontalOptions="End" WidthRequest="50" BackgroundColor="blue" />

                    <ImageButton x:Name="editTerm1" IsVisible="false" Clicked="editTermButton_Clicked" ZIndex="1" Source="edit_icon.png" Grid.Row="1" Grid.Column="2"
                               VerticalOptions="End" HorizontalOptions="EndAndExpand" HeightRequest="20" WidthRequest="50" BackgroundColor="Yellow"/>


                    <Entry x:Name="editTerm1Entry" Grid.Row="1" Grid.RowSpan="2" IsVisible="false" />


                    <CollectionView x:Name="Term1"
                      ItemsSource="{Binding terms}"
                            Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2" 
                                      EmptyView="Click 'Add Term' to get started!" 
                                     >


                        <CollectionView.ItemTemplate>
                            <DataTemplate>

                                <Grid RowDefinitions="*,*, *,*" ColumnDefinitions="*, *">

                                    <Label Grid.Row="0" VerticalOptions="End" Grid.ColumnSpan="5" Grid.RowSpan="2" x:Name="termName" FontSize="Large"  Text="{Binding termName}"></Label>
                                    <Label Grid.Row="2" Grid.RowSpan="2" Text="{Binding startDate}" ></Label>
                                    <Label Text="-" Grid.Row="2" Grid.Column="0" HorizontalOptions="Center" ></Label>
                                    <Label Grid.Row="2" Grid.Column="0"  HorizontalOptions="End" Text="{Binding endDate}" ></Label>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>


                <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*,*">

                    <DatePicker Grid.Row="1" WidthRequest="90" x:Name="editStart1" IsVisible="false" HorizontalOptions="Start" />
                    <Label x:Name="editDash1" Text="-" Grid.Row="1"  Grid.Column="0"  VerticalOptions="Center" HorizontalOptions="End" IsVisible="false" />
                    <DatePicker Grid.Row="1" Grid.Column="1" x:Name="editEnd1" HorizontalOptions="StartAndExpand" IsVisible="false"></DatePicker>


                    <ImageButton x:Name="cancelEdit1" Clicked="cancel_Clicked" IsVisible="false" ZIndex="1" 
                                   Source="cancel.png" Grid.Row="1" Grid.Column="4" VerticalOptions="Center" HorizontalOptions="End" HeightRequest="30"  WidthRequest="30"  />

                    <ImageButton x:Name="delete1"   ZIndex="1" Source="delete.png" Grid.Row="1" Grid.Column="3"
                                   VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="30" 
                                   WidthRequest="30" Clicked="deleteTerm_Clicked"
                                   IsVisible="false" />

                    <ImageButton x:Name="save1" Clicked="saveTerm_Clicked"  ZIndex="1" Source="save.png" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"
                                   VerticalOptions="Center" HorizontalOptions="Start" HeightRequest="30"  WidthRequest="30" IsVisible="false" />


                </Grid>

                <!--#endregion-->



           

