                                 Grid.Column="2"
                                 VerticalOptions="End"
                                 HorizontalOptions="End"
                                 HeightRequest="30"
                                 WidthRequest="45" />


                    <Entry x:Name="editTerm1Entry"
                           Grid.Row="1"
                           Grid.RowSpan="2"
                           IsVisible="false"
                           FontSize="Large"
                           FontAttributes="Bold"
                           TextColor="LightGrey" />


