                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           IsVisible="false"
                           TextColor="LightGrey" />
                    <DatePicker Grid.Row="1"
                                Grid.Column="1"
                                x:Name="editEnd1"
                                HorizontalOptions="StartAndExpand"
                                IsVisible="false"
                                TextColor="LightGrey" />


