                                 Grid.Column="3"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 HeightRequest="30"
                                 WidthRequest="30"
                                 Clicked="deleteTerm_Clicked"
                                 IsVisible="false" />

                    <ImageButton x:Name="save1"
